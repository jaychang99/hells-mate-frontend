#!/bin/sh
. "$(dirname -- "$0")/_/husky.sh"

echo '🏛🏛🏛🏛... Before push, Trying to build now. 🏛🏛🏛🏛'

cd frontend

yarn build ||
(
    echo '❌👷🔨❌ Better call Bob... Because your build failed ❌👷🔨❌
            Next build failed: View the errors above to see why. 
    '
    false;
)

echo '✅✅✅✅ You win this time... I am pushing this now. ✅✅✅✅'